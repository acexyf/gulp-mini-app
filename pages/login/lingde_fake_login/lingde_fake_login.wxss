.page {
    background-color: #fff;
    height: 1200rpx;
}

.page-wrapper {
    height: 1200rpx;
    position: relative;
}

page {
    background: #fff;
}

.header {
    background-color: #efeef1;
    width: 750rpx;
    overflow: hidden;
}

.header .image-wrapper {
    margin-top: 46rpx;
    width: 750rpx;
    border-top-left-radius: 40rpx;
    border-top-right-radius: 40rpx;
    background-color: #fff;
}

.header image {
    width: 238rpx;
    display: inline-block;
    margin: 60rpx 0 60rpx 256rpx;
}

.header text {
    position: absolute;
    display: inline-block;
    width: 350rpx;
    text-align: center;
    top: 240rpx;
    left: 200rpx;
    color: #fff;
    font-size: 66rpx;
}

.status1,
.status2 {
    padding: 60rpx 40rpx 40rpx;
    color: #8d8b99;
    fonr-size: 28rpx;
}

.status3 {
    padding: 0rpx 40rpx 40rpx;
    color: #8d8b99;
}

.status1 text {
    display: block;
}

.content input {
    display: inline-block;
    height: 80rpx;
    line-height: 80rpx;
    vertical-align: top;
}

.input-wrapper {
    height: 80rpx;
    line-height: 80rpx;
    border-bottom: 1px solid #7bb91d;
}

.code-input {
    width: 450rpx;
}

.button {
    margin-bottom: 20rpx;
}

.default-btn {
    margin-top: 0;
}

.hint {
    color: #8d8b99;
    font-size: 26rpx;
    margin: 40rpx 0;
}

.footer {
    padding: 20rpx 40rpx;
    color: #8d8b99;
    font-size: 26rpx;
    text-align: center;
    position: absolute;
    left: 0;
    right: 0;
    bottom: 40rpx;
}

.footer text {
    display: block;
    line-height: 46rpx;
}

.email-suffix {
    display: inline-block;
    vertical-align: top;
    width: 360rpx;
    white-space: nowrap;
}

.suffix-picker {
    height: 122rpx;
    overflow: hidden;
}

.suffix-picker view {
    border-bottom: 1rpx solid #e5e5e5;
    height: 60rpx;
    line-height: 60rpx;
}

.email-input {
    width: 100%;
}

.placeholder {
    color: #ccc;
}

.button {
    width: 45%;
    font-size:30rpx;
    display: inline-block;
    margin: inherit;
    margin-right: 5%;
}